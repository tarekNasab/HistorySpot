@{
    ViewData["Title"] = "Home Page";
}


<!-- Navbar Section -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
        <img src="/Images/Skärmbild 2023-09-29 105351.jpg" alt="HistorySpot" height="70" width="100">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Sökbar -->
</nav>

<div class="search-bg">
    <form asp-controller="HistoricalPoint" asp-action="Search" method="get">
        <input type="text" name="query" placeholder="Search for a historical Story..." />
    </form>
</div>

<!-- Hero Section with Image and Blue Overlay -->
<div class="hero text-white text-center py-5" style="background: url('path_to_a_high_quality_image.jpg') no-repeat center center; background-size: cover;">
    <div class="overlay" style="background-color: rgba(0, 100, 255, 0.6); padding: 60px 0;">
        <h1 class="display-2">HistorySpot</h1>
        <p class="lead">Your guide to the past. Explore, learn, and discover.</p>
        <a href="@Url.Action("List", "HistoricalPoint")" class="btn btn-light btn-lg mt-3">Start Your Journey</a>
    </div>
</div>

<div class="container my-5">
    <!-- Introduction Section -->
    <div class="row mb-5">
        <div class="col-lg-6">
            <h2>Why Choose HistorySpot?</h2>
            <p>With a database spanning millennia and continents, HistorySpot is the definitive platform for history enthusiasts, students, and tourists alike.</p>
        </div>
        <div class="col-lg-6">
    </div>


        <style>
            .search-bg {
                width: 100%; /* Eller en viss px-värde om du vill ha en fast bredd */
                height: 400px; /* Exempel höjd, kan justeras efter behov */
                background: url('/images/benigno-hoyuela-7Z-Uayu13ps-unsplash.jpg') no-repeat center center;
                background-size: cover;
            }


            /* Stil för omslutande div med bakgrundsbild */
            .search-bg {
                display: flex;
                align-items: center; /* Vertikalt centrerad */
                justify-content: center; /* Horisontellt centrerad */
                width: 100%;
                height: 200px;
                background: url('/images/benigno-hoyuela-7Z-Uayu13ps-unsplash.jpg') no-repeat center center;
                
            }

            /* Stila sökfältet */
            input[type="text"] {
                width: 300px;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
                transition: border-color 0.3s, box-shadow 0.3s;
            }

                /* Hover och fokus effekt för sökfältet */
                input[type="text"]:hover,
                input[type="text"]:focus {
                    border-color: #2c3e50;
                    box-shadow: 0 0 8px rgba(44, 62, 80, 0.2);
                }

        </style>


